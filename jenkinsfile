pipeline {
    agent any
    environment {
        PATH = "/usr/bin/ansible:/usr/bin/ansible-playbook:$PATH"
        DOCKER_IMAGE = 'dockimg' // Sp√©cifiez le nom de votre image Docker
        SYMFONY_PORT = 8000
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook(
                    credentialsId: 'ansible-credentials',
                    playbook: 'deploy-symfony.yml',
                    extras: "-e DOCKER_IMAGE=${DOCKER_IMAGE}"
                )
            }
        }
        stage('Check Symfony Port') {
            steps {
                script {
                    def response = sh(script: "curl -Is http://localhost:$8000 | head -n 1 | awk '{print $2}'", returnStatus: true)
                    if (response == 200) {
                        echo "Symfony application is accessible on port $8000."
                    } else {
                        error "Symfony application is not accessible on port $8000."
                    }
                }
            }
        }
    }
}









