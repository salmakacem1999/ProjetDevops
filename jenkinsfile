pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from the repository
                git credentialsId: 'github', 
                    url: 'https://github.com/salmakacem1999/ProjetDevops'
               // checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Install Symfony project dependencies
                sh 'composer install'
            }
        }
        
        stage('Build and Test') {
            steps {
                // Build and test your Symfony application
                sh 'php bin/console cache:clear'
                sh 'php bin/phpunit'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy your Symfony application
                sh 'rsync -avz --delete ./ user@server:/path/to/destination'
            }
        }
    }
}
