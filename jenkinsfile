pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "dockimg:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("${DOCKER_IMAGE}", "-f Dockerfile .")
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook credentialsId: 'ansible-credentials',
                    inventory: 'ansible-inventory/dev',
                    playbook: 'ansible-playbooks/deploy-symfony.yml',
                    extras: "-e DOCKER_IMAGE=${DOCKER_IMAGE}"
            }
        }
    }
}
