pipeline {
    agent any
    environment {
        PATH = "/usr/bin/ansible:/usr/bin/ansible-playbook:$PATH"
        DOCKER_IMAGE = 'dockimg' // Sp√©cifiez le nom de votre image Docker
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook(
                    credentialsId: 'ProjetDevops/ansible-credentials',
                    playbook: '/usr/bin/ansible-playbook',
                    extras: "-e DOCKER_IMAGE=${DOCKER_IMAGE}"
                )
            }
        }
    }
}









