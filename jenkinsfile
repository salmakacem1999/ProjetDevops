pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'dockimg' // Sp√©cifiez le nom de votre image Docker
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy with Ansible') {
            steps {
              
                    ansiblesPlaybook(
                        credentialsId: 'ProjetDevops/ansible-credentials',
                        inventory: 'ProjetDevops/dev.inv',
                        playbook: 'ProjetDevops/deploy-symfony.yml',
                        extras: "-e DOCKER_IMAGE=${DOCKER_IMAGE}"
                    )
                
            }
        }
    }
}








